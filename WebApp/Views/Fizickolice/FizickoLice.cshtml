@Styles.Render("~/Content/Site.css")
<div id="topdiv"><img src="/Content/grb.jpg" alt="Mountain View" style="width:100%;height:200px;"></div>
<div id="leviDiv"></div>
<div id="container">
    <h1>&nbsp &nbsp &nbsp  &nbsp Izaberite šta želite:</h1>
    <form method="get" action="/FizickoLice/Start">
        <input type="submit" value="Fizičko lice" id="fizicko" class="submit" />
    </form>
    <form method="get" action="/PravnoLice/Start">
        <input type="submit" value="Pravno lice" id="pravno" class="submit" />
    </form>
    <div class="StarNext">
        <form id="butF" method="post" action="/FizickoLice/GetFizickoLice">
            <p> &nbsp &nbsp Ime: </p><p> &nbsp &nbsp &nbsp Prezime:</p> <p> &nbsp &nbsp &nbsp JMBG:</p><br />
            <p> <input type="text" id="textIme" name="textIme" value="" /> </p>
            <p> <input type="text" id="textPrezime" name="textPrezime" value="" /> </p>
            <p> <input type="text" id="textJMBG" name="textJMBG" value="" /> </p><br />
            <input type="submit" value="Trazi" id="fizickoLiceTrazi" onclick="check();" class=" submit" />
        </form>
    </div>
</div>
<div id="desniDiv"></div>
<script>
    function check() {
        if (document.getElementById("textJMBG").value == "")
            alert("Unesite identifikacioni broj!!!");
        else if(document.getElementById("textIme").value == "")
            alert("Unesite ime.");
        else if(document.getElementById("textPrezime").value == "")
            alert("Unesite prezime.")
    }
</script>